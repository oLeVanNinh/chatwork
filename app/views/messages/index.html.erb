<p id="notice"><%= notice %></p>


<div class="message-title">
  <h1>Messages</h1>
  <h4 class="text-success"><%= Service::Chatwork.current_user_name %></h4>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Content</th>
      <th>Deivery to</th>
      <th>Delivery at</th>
      <th>Status </th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.id %></td>
        <td><%= message.content %></td>
         <td><%= message.room.name %></td>
        <td><%= message.delivery_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= message.status %></td>
        <td class="button-delete"><%= button_to 'Destroy', message, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Message', new_message_path, method: :get, class: "btn btn-info" %>
